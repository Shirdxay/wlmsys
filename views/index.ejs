<!DOCTYPE html>
<html lang="en">
  <%-include("./partials/header.ejs") %>
  <body>
    <div class="form-container">
      <form action="/submit" method="POST">
        <h1>Water Level Monitoring (RIMP)</h1>
        <label for="options">Choose an option:</label>
        <select name="options" id="options" onchange="toggleGateInput()">
          <option value="" selected>--- Option ---</option>
          <% mlist.forEach((item)=>{ %>
          <option value="<%= item %>"><%= item %></option>
          <% }); %>
        </select>
        <br />
        <label for="gateOpening">Gate opening [cm]:</label>
        <input
          type="number"
          id="gateOpening"
          name="gateOpening"
          min="0"
          step="0.1"
        />
        <br />
        <label for="gpsLocation">GPS Location:</label>
        <input
          type="text"
          id="gpsLocation"
          name="gpsLocation"
          placeholder="Latitude, Longitude"
          readonly
        />
        <br />
        <textarea
          id="comments"
          name="comments"
          rows="4"
          cols="50"
          placeholder="Comments..."
        >
        </textarea>
        <br />
        <button type="submit">Submit</button>
      </form>
    </div>
    <br />
    <%-include("./partials/footer.ejs") %>

    <script src="../prefixpath/js/mainscript.js"></script>
  </body>
</html>
